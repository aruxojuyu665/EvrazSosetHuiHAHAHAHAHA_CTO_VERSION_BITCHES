# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# Embedding Model Configuration
# Options: 'local' or 'openai'
EMBEDDING_TYPE=local

# Local Embedding Settings (when EMBEDDING_TYPE=local)
LOCAL_EMBEDDING_MODEL=intfloat/multilingual-e5-large
LOCAL_EMBEDDING_DEVICE=cuda  # Options: 'cuda', 'cpu', 'mps' (for Mac)
LOCAL_EMBEDDING_BATCH_SIZE=32

# OpenAI Embedding Settings (when EMBEDDING_TYPE=openai)
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_API_KEY=your_openai_api_key_for_embeddings

# Milvus Lite Configuration
# URI - путь к файлу базы данных Milvus Lite
MILVUS_URI=./milvus_lite.db
MILVUS_COLLECTION_NAME=gost_documents
MILVUS_DIMENSION=1024
MILVUS_METRIC_TYPE=COSINE

# Deprecated: старые параметры для Milvus Standalone (не используются в Milvus Lite)
# MILVUS_HOST=localhost
# MILVUS_PORT=19530

# Application Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=5
TEMPERATURE=0.1
MAX_TOKENS=4096

# RunPod Settings
RUNPOD_API_KEY=your_runpod_api_key_here
